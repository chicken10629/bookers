<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error-messages">
  <p class="error-flash-message">
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </p>
  <ul>
    <% @book.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %> 
  </ul>
</div>
<% end %>

<%= form_with model: @book, method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>