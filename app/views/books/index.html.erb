<h1>Books</h1>
<div class="success-flash-message">
  <%= flash[:notice] %>
</div>
<!-- 投稿一覧 目次(th)以下を繰り返し文で表示-->
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", delete_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
<% end %>
</table>

<!--  新規投稿　一覧表示とは別のインスタンス変数を定義しておく。-->
<h1>New book</h1>
<!--  エラーメッセージ-->
<% if @book.errors.any? %>
<div class="error-messages">
  <p class="error-flash-message">
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </p>
  <ul>
  <% @book.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= form_with model: @book, method: :post, local: true do |f| %> 
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>